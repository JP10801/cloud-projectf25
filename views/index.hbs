<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>{{title}}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="/styles.css">
  </head>
  <body>
    <h1>{{title}}</h1>

    <div id="controls">
      <input id="searchBox" placeholder="Search by file name..." />
      <select id="sortSelect">
        <option value="name">Name</option>
        <option value="created">Creation time</option>
        <option value="accessed">Last access</option>
        <option value="size">Size</option>
      </select>
      <select id="folderSelect">
        <option value="">All folders</option>
        {{#each folders}}
          <option value="{{this}}">{{this}}</option>
        {{/each}}
      </select>
      <input type="file" id="uploadInput" multiple />
      <form id="logoutForm" method="post" action="/logout" style="display:inline">
        <button type="submit">Logout</button>
      </form>
    </div>

    <div id="dropzone">Drop files here or click to select</div>

    <table>
      <thead><tr><th>Name</th><th>Folder</th><th>Size</th><th>Action</th></tr></thead>
      <tbody id="fileTableBody"></tbody>
    </table>

    <div id="createControls">
      <h3>Create folder</h3>
      <input id="newFolderName" placeholder="Folder name" />
      <button id="createFolderBtn">Create</button>

      <h3>Create rule</h3>
      <input id="ruleExt" placeholder=".ext" />
      <input id="ruleFolder" placeholder="Folder name" />
      <button id="createRuleBtn">Add rule</button>
    </div>

    <script src="/js/app.js"></script>
  </body>
</html>
